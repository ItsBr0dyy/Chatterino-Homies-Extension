{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "name": "Chatterino Homies Native Host",
  "version": "1.7",
  "description": "Replaces the chat on Twitch.tv with Chatterino Homies.",
  "permissions": ["tabs", "nativeMessaging", "storage"],
  "host_permissions": ["*://*.twitch.tv/*"],
  "icons": {
    "256": "square_logo_2.png"
  },
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://www.twitch.tv/*"],
      "js": ["inject.js"]
    }
  ]
}